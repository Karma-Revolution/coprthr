
#include <stdlib.h>
#include <stdio.h>

#include "stdcl.h"

int main()
{

	CONTEXT* cp = stdcpu;

	if (!cp) exit(__LINE__);

	struct clstat_info stat_info;
	struct cldev_info dev_info;

	clstat(cp,&stat_info);
	clgetdevinfo(cp,&dev_info);

	int ndev = stat_info.ndev;

	clfreport_devinfo(stdout,ndev,&dev_info);

}

